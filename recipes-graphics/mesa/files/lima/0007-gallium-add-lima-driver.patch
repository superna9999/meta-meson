+
+   switch (drm_info.gpu_id) {
+   case LIMA_INFO_GPU_MALI400:
+   case LIMA_INFO_GPU_MALI450:
+      screen->gpu_type = drm_info.gpu_id;
+      break;
+   default:
+      return false;
+   }
+
+   screen->num_pp = drm_info.num_pp;
+   screen->va_start = drm_info.va_start;
+   screen->va_end = drm_info.va_end;
+   return true;
