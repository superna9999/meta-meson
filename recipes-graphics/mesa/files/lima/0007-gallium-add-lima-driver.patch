+   ctx->viewport.far = viewport->translate[2] + viewport->scale[2];
+
+   debug_printf("viewport scale=%f/%f/%f translate=%f/%f/%f\n",
+                viewport->scale[0], viewport->scale[1], viewport->scale[2],
