+static void schedule_print_post_one_instr(gpir_instr *instr)
+{
+   if (!lima_shader_debug_gp)
+      return;
+
+   printf("post schedule instr");
+   for (int i = 0; i < GPIR_INSTR_SLOT_NUM; i++) {
