+#ifndef __LIMA_H__
+
+#include <drm/drmP.h>
+
+enum lima_gpu_type {
+	GPU_MALI400 = 0,
+};
+
+struct lima_device {
+	struct device *dev;
+	struct drm_device *ddev;
+	struct platform_device *pdev;
+
+	enum lima_gpu_type gpu_type;
+	u32 num_pp;
+};
+
+int lima_device_init(struct lima_device *ldev, struct drm_device *dev);
+void lima_device_fini(struct lima_device *ldev);
+
