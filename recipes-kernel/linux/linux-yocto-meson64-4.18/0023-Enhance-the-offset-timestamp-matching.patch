+		if (delta > 0 || delta < -1 * (s32)sess->vififo_size) {
 			atomic_dec(&sess->esparser_queued_bufs);
 			list_del(&tmp->list);
 			kfree(tmp);
@@ -405,7 +400,7 @@ static void amvdec_dst_buf_done_offset(struct amvdec_session *sess,
 }
 
